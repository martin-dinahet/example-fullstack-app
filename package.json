{
  "name": "example-fullstack-app",
  "version": "1.0.0",
  "scripts": {
    "dev": "pnpm --parallel run dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev:types": "pnpm --filter @repo/types dev",
    "build": "pnpm --filter @repo/types build && pnpm --filter './apps/*' build",
    "build:types": "pnpm --filter @repo/types build",
    "db:migrate": "pnpm --filter backend db:migrate",
    "db:generate": "pnpm --filter backend db:generate",
    "db:studio": "pnpm --filter backend db:studio",

    "lint": "biome check --write",
    "format": "biome format --write"
  },
  "packageManager": "pnpm@10.28.0",
  "devDependencies": {
    "@biomejs/biome": "^2.3.11"
  }
}
